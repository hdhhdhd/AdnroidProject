<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/log_username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名:"
        android:textSize="40dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/log_password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码:"
        android:textSize="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/log_username_tv"/>
    <EditText
        android:id="@+id/log_username_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/log_username_tv"
        android:layout_toRightOf="@id/log_username_tv"
        android:hint="请输入用户名"
        android:textSize="30dp"
        android:singleLine="true"/>
    <EditText
        android:id="@+id/log_password_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/log_password_tv"
        android:layout_toRightOf="@id/log_password_tv"
        android:layout_alignLeft="@id/log_username_et"
        android:hint="请输入密码"
        android:textSize="30dp"
        android:singleLine="true"
        />
    <Button
        android:id="@+id/log_log_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/log_password_et"
        android:layout_centerHorizontal="true"
        android:text="登陆"
        android:textSize="30dp"
        android:layout_marginTop="20dp"/>
</RelativeLayout>