<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<Button
    android:id="@+id/menu_show_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="40dp"
    android:text="查看所有"/>
    <Button
        android:id="@+id/menu_add_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="增加学生"
        android:clickable="true"
        android:textSize="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/menu_show_tv"/>
    <Button
        android:id="@+id/menu_change_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:clickable="true"
        android:layout_marginTop="20dp"
        android:text="修改学生"
        android:layout_below="@id/menu_add_tv"/>
    <Button
        android:id="@+id/menu_delete_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="删除学生"
        android:clickable="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/menu_change_tv"/>
    <Button
        android:id="@+id/menu_find_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="查找学生"
        android:clickable="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/menu_delete_tv"/>
    <Button
        android:id="@+id/menu_out_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注销"
        android:textSize="25dp"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>