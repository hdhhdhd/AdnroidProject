<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <Button
       android:id="@+id/menu2_add_btn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="增加学生信息"
       android:textSize="40dp"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="80dp"/>
    <Button
        android:id="@+id/menu2_remove_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除学生信息"
        android:textSize="40dp"
        android:layout_below="@id/menu2_add_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/menu2_change_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改学生信息"
        android:textSize="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/menu2_remove_btn"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/menu2_find_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查找学生信息"
        android:textSize="40dp"
        android:layout_below="@id/menu2_change_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
</RelativeLayout>