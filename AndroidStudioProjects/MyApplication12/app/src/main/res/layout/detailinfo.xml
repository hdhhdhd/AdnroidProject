<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/detinfo_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名："
        android:textSize="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/detinfo_age_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="年龄："
        android:textSize="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/detinfo_name_tv"
        android:layout_alignLeft="@id/detinfo_name_tv"/>
    <TextView
        android:id="@+id/detinfo_major_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="专业："
        android:textSize="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/detinfo_age_tv"
        android:layout_alignLeft="@id/detinfo_name_tv"/>
    <TextView
        android:id="@+id/detinfo_teacher_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="辅导员："
        android:textSize="40dp"
        android:layout_below="@id/detinfo_major_tv"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@id/detinfo_name_tv"/>
    <TextView
        android:id="@+id/detinfo_degree_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学历："
        android:textSize="40dp"
        android:layout_below="@id/detinfo_teacher_tv"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@id/detinfo_name_tv"/>
    <TextView
        android:id="@+id/detinfo_grade_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detinfo_degree_tv"
        android:text="年级："
        android:textSize="40dp"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@id/detinfo_name_tv"/>
    <EditText
        android:id="@+id/detshow_name_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/detinfo_name_tv"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/detinfo_name_tv"
        android:text="hh"
        android:textSize="40dp"
        android:layout_marginRight="20dp"/>
    <EditText
        android:id="@+id/detshow_age_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@id/detshow_name_ed"
        android:textSize="40dp"
        android:layout_alignBottom="@id/detinfo_age_tv"/>
    <EditText
        android:id="@+id/detshow_major_ed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@id/detshow_name_ed"
        android:layout_alignBottom="@id/detinfo_major_tv"
        android:textSize="40dp"/>
    <EditText
        android:id="@+id/detshow_teacher_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/detinfo_teacher_tv"
        android:layout_toRightOf="@id/detinfo_teacher_tv"
        android:textSize="40dp"/>
    <EditText
        android:id="@+id/detshow_degree_ed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/detinfo_degree_tv"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@id/detshow_name_ed"
        android:textSize="40dp"/>
    <EditText
        android:id="@+id/detshow_grade_ed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/detinfo_grade_tv"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@id/detshow_name_ed"
        android:textSize="40dp"/>
    <Button
        android:id="@+id/det_sure_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交"
        android:textSize="40dp"
        android:layout_below="@id/detinfo_grade_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    
</RelativeLayout>