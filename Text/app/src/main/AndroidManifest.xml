<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lz.text">
    <!-- 清理进程权限 -->
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <!-- 读写SDCard权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 读取电话状态权限 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 相机权限 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <!-- WIFI权限 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 蓝牙权限 -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <!-- 打电话 -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <!-- 网络 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 开机启动 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Home.View.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Home.View.Loading"></activity>
        <activity android:name=".Home.View.Home"
            android:launchMode="singleTask">

        </activity>
        <activity android:name=".Home.View.Setting"></activity>
        <activity android:name=".Home.View.AboutUs"></activity>
        <activity android:name=".tongxun.View.Mainmenu"></activity>
        <activity android:name=".tongxun.View.SecMenu"></activity>
        <activity android:name=".AppManager.View.AppManagerMenu"></activity>
        <activity android:name=".AppManager.View.SecAppMeanagerMenu">
        </activity>
        <activity android:name=".CheckPhone.View.CheckPhone"></activity>
        <activity android:name=".SpeedPhone.View.SpeedPhone"></activity>
        <activity android:name=".FileManager.View.FileManagerActivity"></activity>
        <activity android:name=".FileManager.View.SecFileManagerActivity"></activity>
        <activity android:name=".ClearRubbish.View.ClearRubbish"></activity>
    </application>

</manifest>