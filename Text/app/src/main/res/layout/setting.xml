<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/sontitle_lo"
        layout="@layout/sontitle"/>
    <TextView
        android:id="@+id/setting_start_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开机启动"
        android:textSize="25dp"
        android:layout_below="@id/sontitle_lo"
        android:layout_marginLeft="8dp"
        />
    <ToggleButton
    android:id="@+id/setting_start_tb"
    android:layout_width="60dp"
    android:layout_height="30dp"
    android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
    android:layout_alignBottom="@id/setting_start_tv"
    android:textOff=""
    android:textOn=""
        android:background="@drawable/tbsrc"
    />
    <TextView
        android:id="@+id/setting_tztitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通知图标"
        android:textSize="25dp"
        android:layout_below="@id/setting_start_tv"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp"/>
    <TextView
        android:id="@+id/setting_mes_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消息推送"
        android:textSize="25dp"
        android:layout_below="@id/setting_tztitle_tv"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp"/>
    <ToggleButton
    android:id="@+id/setting_tztitle_tb"
    android:layout_width="60dp"
    android:layout_height="30dp"
    android:layout_alignParentRight="true"
    android:layout_alignBottom="@id/setting_tztitle_tv"
    android:textOff=""
    android:textOn=""
        android:background="@drawable/tbsrc"
    />
    <ToggleButton
    android:id="@+id/setting_mes_tb"
    android:layout_width="60dp"
    android:layout_height="30dp"
    android:layout_alignParentRight="true"
    android:layout_alignBottom="@id/setting_mes_tv"
    android:textOff=""
    android:textOn=""
        android:background="@drawable/tbsrc"/>
    <ListView
        android:id="@+id/setting_lv"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_mes_tv"></ListView>

</RelativeLayout>