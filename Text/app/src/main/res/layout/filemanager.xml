<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<include
    android:id="@+id/filemanager_title"
    layout="@layout/sontitle"></include>
    <TextView
        android:id="@+id/filemanager_backgrond_tv"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/filemanager_title"
        android:background="@color/colorPrimary" />
    <TextView
        android:id="@+id/filemanager_size_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:textColor="@color/white"/>
    <ProgressBar
        android:id="@+id/filemanager_titleloading_pb"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已发现"
        android:textSize="20dp"
        android:layout_toLeftOf="@id/filemanager_size_tv"
        android:layout_alignBottom="@id/filemanager_size_tv"
        android:textColor="@color/white"/>
    <RelativeLayout
        android:id="@+id/filemanager_allfile_rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/filemanager_backgrond_tv">
        <TextView
            android:id="@+id/filemanager_allfile_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/filemanager_allfilesize_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="50"
            android:layout_toRightOf="@id/filemanager_allfile_tv"
            android:layout_alignBottom="@id/filemanager_allfile_tv"
            android:layout_marginLeft="20dp"/>
        <ProgressBar
            android:id="@+id/filemanager_allloading_pb"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/filemanager_allfile_tv"
            android:layout_alignBottom="@id/filemanager_allfile_tv"
            android:layout_marginLeft="20dp"
            android:visibility="gone"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_arrows_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/filemanager_txtfile_rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/filemanager_allfile_rl">
        <TextView
            android:id="@+id/filemanager_txtfile_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文档"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/filemanager_txtfilesize_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="50"
            android:layout_toRightOf="@id/filemanager_txtfile_tv"
            android:layout_alignBottom="@id/filemanager_txtfile_tv"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_arrows_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
        <ProgressBar
            android:id="@+id/filemanager_txtloading_pb"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/filemanager_txtfile_tv"
            android:layout_alignBottom="@id/filemanager_txtfile_tv"
            android:layout_marginLeft="20dp"
            android:visibility="gone"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/filemanager_videofile_rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/filemanager_txtfile_rl">
        <TextView
            android:id="@+id/filemanager_videofile_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/filemanager_videofilesize_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="50"
            android:layout_toRightOf="@id/filemanager_videofile_tv"
            android:layout_alignBottom="@id/filemanager_videofile_tv"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_arrows_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
        <ProgressBar
            android:id="@+id/filemanager_videoloading_pb"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/filemanager_videofile_tv"
            android:layout_alignBottom="@id/filemanager_videofile_tv"
            android:layout_marginLeft="20dp"
            android:visibility="gone"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/filemanager_audiofile_rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/filemanager_videofile_rl">
        <TextView
            android:id="@+id/filemanager_audiofile_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音频"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/filemanager_audiofilesize_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="50"
            android:layout_toRightOf="@id/filemanager_audiofile_tv"
            android:layout_alignBottom="@id/filemanager_audiofile_tv"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_arrows_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
        <ProgressBar
            android:id="@+id/filemanager_audio_loading_pb"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/filemanager_audiofile_tv"
            android:layout_alignBottom="@id/filemanager_audiofile_tv"
            android:layout_marginLeft="20dp"
            android:visibility="gone"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/filemanager_imagefile_rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/filemanager_audiofile_rl">
        <TextView
            android:id="@+id/filemanager_imagefile_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/filemanager_imagefilesize_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="50"
            android:layout_toRightOf="@id/filemanager_imagefile_tv"
            android:layout_alignBottom="@id/filemanager_imagefile_tv"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_arrows_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
        <ProgressBar
            android:id="@+id/filemanager_imageloading_pb"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/filemanager_imagefile_tv"
            android:layout_alignBottom="@id/filemanager_imagefile_tv"
            android:layout_marginLeft="20dp"
            android:visibility="gone"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/filemanager_zipfile_rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/filemanager_imagefile_rl">
        <TextView
            android:id="@+id/filemanager_zipfile_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="压缩包"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/filemanager_zipfilesize_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="50"
            android:layout_toRightOf="@id/filemanager_zipfile_tv"
            android:layout_alignBottom="@id/filemanager_zipfile_tv"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_arrows_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
        <ProgressBar
            android:id="@+id/filemanager_ziploading_pb"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/filemanager_zipfile_tv"
            android:layout_alignBottom="@id/filemanager_zipfile_tv"
            android:layout_marginLeft="20dp"
            android:visibility="gone"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/filemanager_apkfile_rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/filemanager_zipfile_rl">
        <TextView
            android:id="@+id/filemanager_apkfile_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="程序包"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/filemanager_apkfilesize_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="50"
            android:layout_toRightOf="@id/filemanager_apkfile_tv"
            android:layout_alignBottom="@id/filemanager_apkfile_tv"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_arrows_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
        <ProgressBar
            android:id="@+id/filemanager_apk_loading_pb"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/filemanager_apkfile_tv"
            android:layout_alignBottom="@id/filemanager_apkfile_tv"
            android:layout_marginLeft="20dp"
            android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>