<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ToggleButton
        android:id="@+id/secfilemanageritem_select_tb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:textOn=""
        android:textOff=""
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:background="@drawable/showappsrc"/>
    <ImageView
        android:id="@+id/secfilemanageritem_icon_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@id/secfilemanageritem_select_tb"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/secfilemanageritem_packagename_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hh"
        android:layout_toRightOf="@id/secfilemanageritem_icon_iv"
        android:textSize="20dp"
        android:layout_alignTop="@id/secfilemanageritem_icon_iv"/>
    <TextView
        android:id="@+id/secfilemanageritem_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="hh"
        android:layout_toRightOf="@id/secfilemanageritem_icon_iv"
        android:layout_alignBottom="@id/secfilemanageritem_icon_iv"/>
    <TextView
        android:id="@+id/secfilemanageritem_size_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:layout_alignParentRight="true"
        android:text="hh"
        android:layout_alignBottom="@id/secfilemanageritem_time_tv"
        android:layout_marginRight="20dp"/>
</RelativeLayout>